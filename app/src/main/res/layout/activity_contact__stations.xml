<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#54454343"
    android:orientation="vertical"
    tools:context=".Contact_Stations">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/station_information"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/stationList"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_margin="10dp"
        android:gravity="center">

        <EditText
            android:id="@+id/stationPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="93dp"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:inputType="phone"
            android:textColor="@color/btnColourL"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_margin="10dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/phoneCall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundbtncl"
            android:src="@drawable/ic_baseline_phone_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="101dp"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>


</LinearLayout>