        />

    <padding
        android:bottom="5dp"
        android:top="5dp"
        android:left="5dp"
        android:right="5dp"
        />

    <gradient
        android:centerColor="@color/colorAccent"
        android:startColor="@color/colorPrimary"
        android:useLevel="true"
        />
